category:            Graphics
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10
data-files:          *.bmp
data-dir:            src
Flag ios
      Description:         Build for iOS
      Default:             False

Flag android
      Description:         Build for Android
      Default:             False

Flag desktop
      Description:         Build for Desktop
      Default:             True

Flag firstBuild
      Description:         Fix for the Android build
      Default:             False
               
                   
-- Desktop executable 
executable HXSDL
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && < 5
                     , text
                     , SDL2
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall
  if flag(desktop)
     Buildable: True
  else
     Buildable: False


-- Android executable
executable libHXSDL.so
  main-is:             AndroidMain.hs
  build-depends:       base >=4.7 && < 5
                     , text
                     , SDL2
  if flag (firstBuild)
    ghc-options:         -shared -threaded
  else
    ghc-options:         -optl-shared -threaded
    cc-options:          -shared
    ld-options:          -shared
  c-sources:           src/init.c
  include-dirs: :      src
  if flag (ios) || flag(desktop)
     Buildable: False


-- iOS executable
executable HXSDLStaticLib
  build-depends:       base >=4.7 && < 5
                     , text
                     , SDL2
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -staticlib -threaded -no-hs-main 
  cpp-options:         -DIOS
  main-is:             iOSMain.hs
  if flag(ios)
     Buildable:           True
  else
     Buildable:           False
